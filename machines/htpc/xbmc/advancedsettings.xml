<advancedsettings>
    <splash>false</splash>
    <loglevel>1</loglevel>

     <tvshowmatching>
         <regexp>S([0-9]+)-Episode([0-9]+)\..*</regexp>
     </tvshowmatching>

    <pathsubstitution>
        <substitute>
            <from>special://xbmc/sounds</from>
            <to>special://home/sounds</to>
        </substitute>
    </pathsubstitution>

    <algorithmdirtyregions>1</algorithmdirtyregions>
</advancedsettings>
