#!/bin/bash
# Ensure the package control plugin

path="../../Installed Packages/Package Control.sublime-package"
url="https://sublime.wbond.net/Package%20Control.sublime-package"

# Ensure the package directory exists
mkdir "$(dirname "$path")"

# Download the package control package if it doesn't exist
[[ ! -f "$path" ]] && curl --silent "$url" -o "$path"
