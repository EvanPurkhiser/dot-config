# Tab controls on mouse-numpad
@KP_{Left,Begin,Right}
  xdotool key Control+{Shift+Tab,w,Tab}

# General keybindings
super + Return
  termite

super + e; {f, m}
  {chromium, mumble}

super + p
  adb shell input keyevent 26

super + r
  dmenu_run -b

super + semicolon
  passmenu -l 6 -z -h 10 -w 300 -x 810 -y 100 -b

super + shift + s
  echo '' | xclip -selection clipboard -i; \
  maim -s -l -b0 -c '0,0,0,0.3' --format=png /dev/stdout | xclip -t image/png -selection clipboard -i

super + shift + alt + s
  maim -s -l -b0 -c '0,0,0,0.3' $HOME/scratch/$(date +%F-%T).png

super + Escape
  lights standby && systemctl suspend

super + a; super + {a,s,b,q}
  lights scene {relaxed,pre-sleep,home,none}
