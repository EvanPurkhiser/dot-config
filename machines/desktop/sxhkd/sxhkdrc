# Tab controls on mouse-numpad
@KP_{Left,Begin,Right}
  xdotool key Control+{Shift+Tab,w,Tab}

# Music controls
mod4 + m; {h,t,l}
  mpc {prev,toggle,next}

mod4 + m; s
  dmenu_di.fm

# TV power room automation
mod4 + a; t
  irsend -a htpc SEND_ONCE lg_mkj36998126 power

# HDMI Switcher controls
mod4 + a; s; {1,2,3,4,Left,Right,p}
  irsend -a htpc SEND_ONCE Monoprice_5557_HDMI_Switch KEY_{1,2,3,4,PREVIOUS,NEXT,POWER}

# Monitor display controls
mod4 + d; p
  monitor toggle

mod4 + d; t
  tv-toggle

# General keybindings
mod4 + Return
  systemd-run --user termite

mod4 + e; {f, v}
  systemd-run --user {chromium, mangler, /opt/sublime_text_3/sublime_text}

mod4 + e; w
  systemd-run --user --service-type=forking subl3

mod4 + BackSpace
  sleep 0.1; mpc stop; monitor off

mod4 + p
  adb shell input keyevent 26

mod4 + r
  dmenu_run -b

# Reset headset volume
# This is mostely useful for just after the google-hangouts plugin changes it...
mod4 + v
  pactl set-source-volume alsa_input.usb-Sennheiser_Communications_Sennheiser_USB_Headset-00-Headset.analog-mono 32768

# BSPWM key bindings
!!@@bspwm
