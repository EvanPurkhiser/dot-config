# Tab controls on mouse-numpad
@KP_{Left,Begin,Right}
  xdotool key Control+{Shift+Tab,w,Tab}

# General keybindings
super + Return
  termite

super + e; {f, m}
  {chromium, mumble}

super + p
  adb shell input keyevent 26

super + r
  dmenu_run -b

super + l
  passmenu -l 6 -z -h 10 -w 300 -x 810 -y 100 -b

super + shift + s
  echo '' | xclip -selection clipboard -i; \
  maim -slc '0,0,0,0.15' --format png /dev/stdout | xclip -t image/png -selection clipboard -i

super + shift + alt + s
  maim -slc '0,0,0,0.15' $HOME/scratch/$(date +%F-%T).png

# Reset headset volume
# This is mostely useful for just after the google-hangouts plugin changes it...
super + v
  pactl set-source-volume alsa_input.usb-Sennheiser_Communications_Sennheiser_USB_Headset-00-Headset.analog-mono 32768

# BSPWM key bindings
!!@@bspwm
