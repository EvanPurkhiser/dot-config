[core]
  autocrlf = false
  excludesfile = ~/.config/git/ignore

[alias]
  st  = status -sb
  ci  = commit -v
  co  = checkout
  ls  = log --date=short --pretty=ls
  rma = !git ls-files --deleted -z | xargs -0 -r git rm

[pretty]
  ls = format:%C(cyan)%h %C(red)%ad %C(blue)[%an]%C(auto)%d %C(white)%s

[diff]
  tool = vimdiff
  algorithm = patience

[apply]
    whitespace = strip

[color]
  ui = true

[rerere]
  enabled = true

[rebase]
  autosquash = true

[push]
  default = upstream

[url "git@github.com:"]
  insteadOf = gh:

[include]
  path = user
